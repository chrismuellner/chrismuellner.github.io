{
  "scripts": {
    "start": "npm-run-all --parallel css eleventy",
    "eleventy": "npx @11ty/eleventy --serve ",
    "debug": "DEBUG=Eleventy* npx @11ty/eleventy",
    "css": "npx tailwindcss -i src/styles/tailwind.css -c src/styles/tailwind.config.js -o _site/style.css --watch",
    "build": "ELEVENTY_PRODUCTION=true npx @11ty/eleventy && NODE_ENV=production npx tailwindcss -i src/styles/tailwind.css -c src/styles/tailwind.config.js -o _site/style.css --minify"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@toycode/markdown-it-class": "^1.2.4",
    "autoprefixer": "^10.4.16",
    "js-yaml": "^4.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "dayjs": "^1.11.10"
  }
}
