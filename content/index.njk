<section>
  <ul class="flex flex-wrap gap-1.5">
    {%- for social in metadata.socials -%}
    <li>
      <a class="inline-flex items-center justify-center gap-1 px-2 rounded-full border hover:border-pink-500" target="_blank" href="{{ social.url }}">
        <figure class="size-4 items-center">
          {% icon "simple:"+social.name, class="fill-white" %}
        </figure>
        <span class="select-none">
          {{ social.name }}
        </span>
      </a>
    </li>
    {%- endfor -%}
  </ul>
</section>
